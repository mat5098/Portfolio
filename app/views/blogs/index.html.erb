<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>
<table>
  <thead>
    <tr>
      <th>Blog Title</th>
      <th>Body</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.body %></td>
      <td><%= link_to blog.status, toggle_status_blog_path(blog), method: :get %></td>
      <td><%= button_to 'Show', blog, method: :get %></td>
      <td><%= button_to 'Edit', edit_blog_path(blog), method: :get %></td>
      <td><%= button_to 'Delete post', blog, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= button_to "New blog", new_blog_path, method: :get %>
